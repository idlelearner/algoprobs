package code.unionfind;

public class WeightedUF {
	int a[];

	public WeightedUF(int N) {
		a = new int[N];
		for (int i = 0; i < N; i++)
			a[i] = i;
	}

	private int getRoot(int i) {
		while (a[i] != i)
			i = a[i];
		return i;
	}

	private boolean find(int p, int q) {
		return getRoot(p) == getRoot(q);
	}
}
